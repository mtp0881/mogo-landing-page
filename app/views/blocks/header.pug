//- header -> header-top -> header-content -> header-bottom -> responsive -> menu javascript -> slick slider

header.header
	.container
		.header-top 
			a.header-logo(href="index.html") MoGo
			i.fa.fa-bars.header-toggle
			ul.header-menu
				+menuLink("ホーム","#about")
				+menuLink("サービス","#service")
				+menuLink("事業内容","#work")
				+menuLink("ブログ","#blog")
				+menuLink("お問い合わせ","#contact")
				li.header-menu-item 
					a.header-menu-icon(href="#")
						i.fa.fa-shopping-cart
				li.header-menu-item 
					a.header-menu-icon(href="#")
						i.fa.fa-search
		.header-content 
			h2.header-content-caption クリエイティブテンプレート
			h1.header-content-main Welcome to mogo 
			a.header-content-more(href="#") もっと詳しい情報
		.header-bottom
			+headerBottomItem("01","ホーム")
			+headerBottomItem("02","事業内容")
			+headerBottomItem("03","我々のチーム")
			+headerBottomItem("04","お問い合わせ")