mixin menuLink(title,href = "#")
	li.header-menu-item 
		a.header-menu-link(href= href)= title

mixin headerBottomItem(number,title)
	.header-bottom-item
		span.header-bottom-number= number
		span.header-bottom-text= title

mixin blockBox(caption,title,desc)
	.block-box
		h3.block-box-caption= caption 
		h2.block-box-heading= title
		if desc 
			p.block-box-desc= desc

mixin aboutItem(src,title,iconClass,alt="")
	.about-item 
		img.about-image(src= src,alt= alt)
		.about-content
			i.about-icon(class= iconClass)
			span.about-title= title

mixin numberItem(count,text)
	.number-item
		h4.number-item-count= count
		span.number-item-text= text

mixin serviceItem(src,title,desc)
	.service-item 
		img(src= src, alt="").service-item-img
		.service-item-info
			h3.service-item-title= title
			p.service-item-desc= desc

mixin wedoItem(src,title,desc,active="")
	.wedo-item(class= active)
		.wedo-item-header 
			img(src= src, alt="").wedo-item-icon
			h3.wedo-item-title= title
			i.fal.fa-angle-down.wedo-item-arrow
		.wedo-item-content 
			.wedo-item-text= desc

mixin teamSocial(facebook= "#",twitter= "#",printerest= "#",instagram= "#")
	ul.team-social 
		li.team-social-item
			a.team-social-link(href= facebook) 
				i.fab.fa-facebook-f
		li.team-social-item
			a.team-social-link(href= twitter) 
				i.fab.fa-twitter
		li.team-social-item
			a.team-social-link(href= printerest) 
				i.fab.fa-pinterest
		li.team-social-item
			a.team-social-link(href= instagram) 
				i.fab.fa-instagram

mixin teamItem(src,name,position,iconClass)
	.team-item 
		.team-main 
			img(src= src).team-image
			.team-content 
				if block 
					block
		.team-info
			h3.team-name= name
			span.team-position= position

mixin workItem(src="./images/img-work1.png",iconSrc="./images/img-work-icon.png",title="Lorem ipsum",desc="Lorem ipsum",full="")
	.work-item(class= full)
		img(src= src, alt="").work-image
		.work-content 
			img(src= iconSrc, alt="").work-icon
			h3.work-title= title
			span.work-desc.text.text-light= desc

mixin peopleItem(src="./images/img-people1.png",name="Matthew Dix",job="Graphic design",desc="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.")
	li.people-item 
		img(src= src, alt="").people-avatar
		.people-info 
			h3.people-name= name
			span.people-job.text.text--light= job
			p.people-desc.text= desc

mixin storyItem(src="./images/img-blog1.png",dateNumber="10",dateText="Jan",title="Matthew Dix",view="100",comment="100",desc="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor.")
	li.story-item
		.story-media
			img(src= src).story-image
			.story-date
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc.text
			p.story-desc-inner= desc
		.story-meta 
			.story-meta-item 
				i.fa.fa-eye.story-meta-icon 
				span.story-meta-number.text.text--light= view
			.story-meta-item 
				i.fa.fa-comment.story-meta-icon 
				span.story-meta-number.text.text--light= comment

mixin quoteItem(src="../images/img-quote.png",type ="false",author="Jon Doe",desc="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, consectetur adipisicing elit")
	.quote-item
		if type == "false"
			.quote-icon
				img(src= src, alt="")
		else 
			img(src= src, alt="").quote-image
		.quote-info
			p.quote-desc= desc
			span.quote-author= author 